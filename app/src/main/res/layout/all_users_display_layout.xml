<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:background="@drawable/all_user_display"
    android:elevation="10dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/all_user_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        tools:src="@drawable/profile"/>

        <ImageView
            android:id="@+id/all_user_state_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            tools:src="@drawable/baseline_circle_24"
            android:layout_gravity="bottom"
            android:layout_marginLeft="-12dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_gravity="center">
        
        <TextView
            android:id="@+id/all_user_username"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            tools:text="Username"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/all_user_status"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            tools:text="Username"
            android:textAlignment="textStart"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:textStyle="italic"
            android:layout_marginStart="15dp"/>

    </LinearLayout>


</LinearLayout>